<UserControl
    x:Class="KeePass.Controls.ListItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:keepass="clr-namespace:KeePass.Utils"
    Style="{StaticResource ControlDefaults}">

    <StackPanel Orientation="Horizontal"
                keepass:EaseEffect.IsEnabled="True">

        <Grid Visibility="{Binding IconState}" MaxHeight="65" MinHeight="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" MaxHeight="23" MinHeight="1" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Image Source="{Binding Overlay}" 
                   Stretch="None"
                   Grid.Column="0" Grid.RowSpan="2"/>
            <TextBlock Text="{Binding Title}"
                       Style="{StaticResource PhoneTextLargeStyle}"
                       Grid.Column="1" />
            <TextBlock Text="{Binding Notes}"
                       Style="{StaticResource PhoneTextSubtleStyle}"
                       Grid.Column="1"
                       Grid.Row="1"
                       MaxHeight="23" MinHeight="1" />
        </Grid>
    </StackPanel>
</UserControl>
